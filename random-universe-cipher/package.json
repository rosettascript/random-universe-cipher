{
  "name": "random-universe-cipher",
  "version": "1.0.0",
  "description": "Random Universe Cipher - A quantum-resistant symmetric block cipher",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:wasm": "cd wasm && wasm-pack build --target web --release --out-dir pkg",
    "build:all": "npm run build:wasm && npm run build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "hash-wasm": "^4.12.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "cipher",
    "encryption",
    "cryptography",
    "quantum-resistant"
  ],
  "license": "MIT"
}
